# Configuración para acceso a Servidor Colab
# Copia este archivo como `.env.local` y configura tus valores

# URL del servidor Colab con ngrok
# Ejemplo: https://1234-5678-90ab-cdef.ngrok.io
# OBTENER: Ejecuta COLAB_SERVER_OMEGA21_V4_UNIFICADO.py en Colab
COLAB_SERVER_URL=http://localhost:8000

# Configuración de entrenamiento
BATCH_SIZE=32
EPOCHS=1
MAX_BATCHES=

# Timeout para conexiones (ms)
CONNECTION_TIMEOUT=30000

# Intentos de reconexión
RETRY_ATTEMPTS=3

# Archivo de dataset (opcional)
# Si existe, se cargará automáticamente
DATASET_FILE=./dataset.json

# Modo debug
DEBUG=false
